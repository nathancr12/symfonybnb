{% extends 'admin/base.html.twig' %}
{% block title %}Modification de l'utilisateur {{user.id}}{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="my-5">Modification de l'utilisateur {{user.id}}</h1>
        <a href="{{ path('admin_user_index') }}" class="btn btn-secondary my-3">Retour</a>
        {% if 'ROLE_ADMIN' in user.roles %}
                <a href="{{ path('admin_users_removeAdmin', {'id': user.id})}}" class="btn btn-danger my-3">Supprimer le role admin</a>
        {% else %}
                <a href="{{ path('admin_users_addAdmin', {'id': user.id})}}" class="btn btn-success my-3">Ajouter le role admin</a>
        {% endif %}
        {{form_start(myForm)}}
            {{form_widget(myForm)}}
            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Modifier l'utilisateur</button>
        {{form_end(myForm)}}
    </div>
{% endblock %}